{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SSH Manager",
  "version": "1.0.0",
  "identifier": "com.ori.repomanager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5175",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "SSH Manager v2.0",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "shortDescription": "Gestión de repositorios Git",
    "longDescription": "SSH Manager - Una herramienta moderna para gestionar múltiples entornos y repositorios Git",
    "copyright": "© 2026 Alex Constantin Castu (ORI)"
  }
}
